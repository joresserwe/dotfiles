{
    "description": "Open iTerm2 with Ctrl+T globally",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.googlecode\\.iterm2$"
                    ],
                    "type": "frontmost_application_unless"
                }
            ],
            "from": {
                "key_code": "t",
                "modifiers": {
                    "mandatory": [
                        "control"
                    ]
                }
            },
            "to": [
                {
                    "shell_command": "open -a iTerm"
                }
            ],
            "type": "basic"
        }
    ]
}
